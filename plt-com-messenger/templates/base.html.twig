<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        <link rel="stylesheet" href="styles/bootstrap.min.css">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <a class="navbar-brand" href="{{ path('index') }}">Navbar</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
                  
                    <div class="collapse navbar-collapse" id="navbarColor02">
                      <ul class="navbar-nav mr-auto">
                    {% if app.user %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('index') }}">Accueil <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('musique') }}">Musique</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('groupe') }}">Groupe</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" href="{{ path('deconnexion') }}">Déconnexion</a>
                        </li>
                    {% else %}
                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('login') }}">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('inscription') }}">Créer un compte</a>
                            </li>

                      </ul>
                      <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                      </form>
                    </div>
                  </nav>
                    <div class="container-fluid-width=100%">
                        <div class="row">
                             <div class="col-sm-2"></div>
                            <div class="col-sm-4"><a href="{{ path('login') }}"><button type="button" class="btn btn-primary btn-lg btn-block">Se connecter</button></a></div>
                            <div class="col-sm-4"><a href="{{ path('inscription') }}"><button type="button" class="btn btn-primary btn-lg btn-block">Se créer un compte</button></a></div>
                            <div class="col-sm-2"></div>

                        </div>  
                    </div>
                        {% else %}
                        <form class="form-inline my-2 my-lg-0">
                                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                              </form>
                            </div>
                        {% endif %}
                    {% endif %}



                {% block body %}
                {% endblock %}

    </body>
</html>
