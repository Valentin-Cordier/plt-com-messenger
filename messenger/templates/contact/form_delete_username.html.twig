<form method="post" action="{{ path("username_delete", {'username': ami.username} ) }}">
    <input type="hidden" name="_method" value="DELETE">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ami.username) }}">


    <button>
        <i class="fa fa-trash" aria-hidden="true"></i>
    </button>
</form>
