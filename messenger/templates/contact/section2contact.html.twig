<div class="col-md-5 mx-auto">
    <h1 class="text-center">La recherche de contacts:
    </h1>
    <br>
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control col-sm-9" type="text" placeholder="Search">
        <button2 class="btn btn-secondary col-2 col-sm-3 mx-auto text-center" type="submit">Search</button2>
    </form>
    {# <br> #}

    {% for users in username %}
        <br>
        <div class="list-group col-md-12 mx-auto text-center">


            <h4>{{ users.username}}</h4>


            <div class="list col-md-2 mx-auto">
                <a
                    href="{{ path('add_contact', {'id': users.idUser}) }}" style="color:black !important;">
                    {# <br> #}
                    <i class="fa fa-user-plus text-center" id="i" aria-hidden="true">{{ button_label|default('') }}</i>


                </a>

            </div>
            {# {% include 'contact/add_contact.html.twig' %} #}


        </div>
    {% endfor %}

</div>
