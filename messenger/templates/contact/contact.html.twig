{% extends 'base.html.twig' %}

{% block title %}Hello PltComMessengerController!
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/contact.css">
{% endblock %}


{% block body %}

    {% if  app.user %}

        <!--Première Section (celle des amis de l'utilisateur)-->
        <div class="container-fluid">
            <div class="row">

                <div class="list col-md-6 mr-auto">
                    <h1 class="text-center">Les amis de "{{ user.username|title }}":</h1>


                </div>
                <hr
                class="hr"/>

                <!--Deuxième Section ( celle de la recherche de contact)-->

                <div class="col-md-6">
                    <h1 class="text-center">La recherche de contacts:
                    </h1>
                    <br>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control col-sm-10" type="text" placeholder="Search">
                        <button class="btn btn-secondary col-2 col-sm-2 mx-auto" type="submit">Search</button>
                    </form>
                    <br>

                    {% for users in username %}

                        <div class="list col-md-12 mx-auto">

                            {{ users.username}}


                            <div class="list col-md-2 ml-auto">
                                <i class="fa fa-user-plus" aria-hidden="true" data-toggle="modal" data-target="#myModal">{{ button_label|default('') }}</i>


                            </div>
                            <!-- Modal -->
                            <div id="myModal" class="modal fade" role="dialog">
                                <div
                                    class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            {# <h4 class="modal-title">Modal Header</h4> #}
                                        </div>
                                        <div
                                            class="modal-body">
                                            {{ form(start)}}


                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-success">Ajouté en amis</button>

                                            <button type="button" class="btn btn-default" data-dismiss="modal">Fermé</button>
                                        </div>
                                    </div>

                                </div>
                            </div>


                            <hr>
                        </div>
                    {% endfor %}


                </div>


            </div>
        </div>
    {% endif %}

    <!-- Footer -->

    <footer class="page-footer font-small unique-color-dark">
        <hr>

        <!-- Footer Links -->
        <div
            class="container text-center text-md-left mt-5">

            <!-- Grid row -->
            <div
                class="row mt-3">

                <!-- Grid column -->
                <div
                    class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">

                    <!-- Content -->
                    <h6 class="text-uppercase font-weight-bold">
                        <i class="fa fa-comments-o fa-1x"></i>
                        Messenger&CO
                    </h6>

                    <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                    <p>Est une application Web et mobile pour la discution privé et groupe.</p>

                </div>
                <!-- Grid column -->

                <!-- Grid column -->
