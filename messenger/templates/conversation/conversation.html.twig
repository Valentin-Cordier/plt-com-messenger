{% extends 'base.html.twig' %}


{% block title %}Index des Conversation
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/conversation.css">
{% endblock %}


{% block body %}


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 mr-auto text-center">
                <h1 class="text-center">

                    Votre liste d'amis !
                </h1>

                <button class="btn btn-primary">
                    <a href=" {{ path('contact') }} ">
                        retour Ã  la liste de contact
                    </a>
                </button>
                <br/>
                <br/>
                {% for ami in amis %}


                    <div class="col-md-12 mx-auto">
                        <div class="list-group col-md-10 mx-auto">
                            <div class="list">
                                {% if ami.username is empty %}
                                    <a href="{{ path('conversation_show', {'id': ami.idUserAmis.idUser}) }}" class="list-group-item" style="text-align: center;">
                                        {{ ami.idUserAmis.username|title }}
                                    </a>
                                {% else %}
                                    <a href="{{ path('conversation_show', {'id': ami.idUserAmis.idUser}) }}" class="list-group-item" style="text-align: center;">
                                        {{ ami.username|title }}
                                    </a>

                                {% endif %}
                            </div>
                            <br>
                        </div>
                    </div>


                {% endfor %}
            </div>
            {% include "conversation/list_conv_gr.html.twig" %}
        </div>
    </div>
    {% include "footer.html.twig" %}
{% endblock %}
