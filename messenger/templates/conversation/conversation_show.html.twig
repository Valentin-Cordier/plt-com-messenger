{% extends 'base.html.twig' %}

{% block title %}Index des Conversation{% endblock %}

        {% block stylesheets %}
        <link rel="stylesheet" href="../styles/bootstrap.min.css" />
        {% endblock %}

{% block body %}
{% for username in users %}


<div class="container">
    <div class="row">
        
        {{ include ('conversation/users.html.twig') }}
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <p>L'utilisateur:
                      
                    {{ username.username}}
                      
                    </p></a>
                </div>
                
                <div class="card-body conversation">
                    <form action="{{ path('conversation_show', {'id': username.idUser}) }}" method="post">


                        <div class="form-group">
                            <div class="card-body conversation">
                            {% for messages in message %}
                                {{ messages.message }}
                                {% endfor %}
                            </div>
                        </div>

                        {{ form_start(form) }}

                            <div class="form-group">
                                {{ form_row(form.message, {'attr': {'placeholder': 'Votre message ...', 'class': 'form-control'} }) }}
                            </div> 

                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Envoy√©</button>
                        </div>
                        {{ form_end(form) }}
                    </form>

                </div>

            </div>
        </div>

    </div>

</div>
{% endfor %}


