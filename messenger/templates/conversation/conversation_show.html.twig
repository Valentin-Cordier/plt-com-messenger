{% extends 'base.html.twig' %}

{% block title %}Index des Conversation, Hello {{ controller_name }}!{% endblock %}

     {% block stylesheets %}
            <link rel="stylesheet" href="/styles/conversation_show.css">
        {% endblock %}

{% block body %}




<div class="container">

    <div class="row">
    
        <div class="list-group col-md-2">
            {{ include ('conversation/users.html.twig') }}
        </div>
         
 
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <p>L'utilisateur:
                        
                            {{users.username}}
                            
                        
                        </p>
                    </div>

                    <div class="card-body conversation">
                        <form action="" method="post">


                            <div class="form-group">
                            {% for messages in message %}
                                <div class="card-body conversation">
                            <div class="conv">
                            <h5>
                            Username:   {{ messages.message }}
                            </h5>
                            </div>
                            
                                        
                                
                                </div>
                                {% endfor %}
                            </div>

                            {{ form_start(form) }}

                                <div class="form-group">
                                    {{ form_row(form.message, {'label': 'Message :','attr': {'placeholder': 'Votre message ...', 'class': 'form-control'} }) }}
                                </div> 

                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Envoy√©</button>
                            </div>
                            {{ form_end(form) }}
                        </form>

                    </div>

                </div>
            </div>
        
            {# {% endif %} #}
        
    </div>

</div>



<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
                    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}