            {{ form_row(form.confirm_password, {'label': 'Confirmation de mot de passe:', 'attr': {'placeholder': 'Confirmation de mot de passe !', 'class': 'form-control'} }) }}
        </div>

        <div class="form-group col-md-2 mx-auto">
