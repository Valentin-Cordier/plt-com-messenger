{% extends 'plt_com_messenger/indexnav.html.twig' %}

{% block title %}Connexion{% endblock %}
        {% block stylesheets %}
        <link rel="stylesheet" href="../../public/styles/form.css">
        {% endblock %}
{% block body %}



            


        
        <form method="post">
            <div class="container">
                <div class="row">
                    <h2>Formulaire de connexion !</h2>
                        <div class="form-group col-md-12">
                        <label for="_username">Email:</label>
                            <input type="email" id="email" name="_username" class="form-control"/>
                        </div>
                        <div class="form-group col-md-12">
                        <label for="_password">Mot de passe :</label>
                            <input type="password" id="password" name="_password" class="form-control"/>
                        </div>

                        <div class="form-group col-md-2">
                            <button type="submit" class="btn btn-success">Se connecter</button>
                        </div>
                </div>
            </div>
        </form>
        
{% endblock %}