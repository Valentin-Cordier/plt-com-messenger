<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Message privé Edit

            {% endblock %}

        </title>
        <link rel="stylesheet" href="/styles/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
        </head>


        {% block body %}
            {{ include('/gestion_compte/gestion.html.twig') }}

            <div class="container-fluid">
                <h1>Edit MessagePri</h1>

                <div class="row">


                    <div class="col-md-8 mx-auto">
                        {{ form_start(form) }}

                        <div class="form-group col-md-12 mx-auto">
                            {{ form_widget(form)}}

                        </div>
                        {{ form_end(form) }}

                        <div class="form-group">
                            <button class="btn btn-primary">{{ button_label|default('enregistrer') }}</button>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-primary">
                                <a href="{{ path('entity_message_pri') }}">Retour à la liste des Messages</a>
                            </button>
                        </div>


                        <div class="form-group">
                            {{ include('gestion_compte/gestion_message_pri/_delete_form.html.twig') }}
                        </div>


                    </div>


                </div>
            </div>
        {% endblock %}
    </html>
